{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "globalSetup": "./test/globalSetup.ts",
  "globalTeardown": "./test/globalTeardown.ts",
  "moduleNameMapper": {
    "src/(.*)": "<rootDir>/src/$1"
  },
  "testMatch": [
    "**/test/functional/**/*.test.ts",
    "**/test/integration/**/*.test.ts",
    "**/test/unit/**/*.test.ts"
  ]
}
