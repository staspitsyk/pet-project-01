{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "modulePaths": ["<rootDir>"],
  "moduleDirectories": ["node_modules", "src"],
  "testPathIgnorePatterns": ["test/integration", "test/functional"],
  "testMatch": ["**/test/unit/**/*.test.ts"]
}
