{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "src/(.*)": "<rootDir>/src/$1"
  },
  "testPathIgnorePatterns": ["test/integration", "test/functional"],
  "testMatch": ["**/test/unit/**/*.test.ts"]
}
